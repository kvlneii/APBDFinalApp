@page "/test"

<h3>Test Component</h3>

<input type="text" @onkeydown="TogglePanelVisibility" />

<div id="panel" style="visibility: @panelVisibility">
    <p>This is the panel content.</p>
</div>

@code {
    private string panelVisibility = "hidden";

    private void TogglePanelVisibility(KeyboardEventArgs args)
    {
        if (args.Key == "Enter")
        {
            panelVisibility = panelVisibility == "hidden" ? "visible" : "hidden";
        }
    }
}
